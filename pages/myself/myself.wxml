    <van-icon name="comment-o" size="30px"/>
    <view class="denglu-font" style="width: 200rpx;">登录</view> -->
   <!-- <van-button type="primary" style="width: 100%;" 
    onclick="toLogin">跳转</van-button> -->
   <!-- </view> -->
</view>
<view class="btn" bind:tap="clickbtn">
  <van-button round type="info" size="large" color="#40ae36"    bindtap="{{statefunction}}">{{state}}</van-button>
</view>