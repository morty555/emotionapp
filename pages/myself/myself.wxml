<view class="usercontainer">
   <view class="userbox">
      <image class="pic" src="/images/myself.png" mode="" />
      <view class="usercenter">
             <view class="title">{{personname}}</view>
             <view class="person_text">{{persontext}}</view>
      </view>
      <van-icon name="arrow" size="20px" color="#333333" bind:tap="toPersonDetail"/>
   </view>
   <view class="setting" bind:tap="tosetting">
    <van-icon name="setting-o" size="30px"/>
    <view class="setting-font">设置</view>
   </view>
   <view class="relation" bind:tap="torelation">
    <van-icon name="question-o" size="30px"/>
    <view class="relation-font">关于</view>
   </view>
   <view class="readme" bind:tap="toreadme">
    <van-icon name="comment-o" size="30px"/>
    <view class="readme-font">使用须知</view>
   </view>
